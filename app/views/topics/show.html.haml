.row
  .panel.panel-default
    .panel-body
      %h1= @topic.title
      .col-md-6
        %p Tópico
        / Nav tabs
        %ul.nav.nav-tabs{:role => "tablist"}
          %li.active{:role => "presentation"}
            %a{"aria-controls" => "popular", "data-toggle" => "tab", :href => "#consenso", :role => "tab"} Consenso

        / Tab panes
        .tab-content
          #consenso.tab-pane.active{:role => "tabpanel"}
            - @topic.consensus.each do |p|
              = render partial: "proposals/proposal", locals: {proposal: p}



      .col-md-6
        %p Alteração para proposta selecionada
        / Nav tabs
        %ul.nav.nav-tabs{:role => "tablist"}
          %li.active{:role => "presentation"}
            %a{"aria-controls" => "popular", "data-toggle" => "tab", :href => "#popular", :role => "tab"} Popular
          %li{:role => "presentation"}
            %a{"aria-controls" => "top", "data-toggle" => "tab", :href => "#top", :role => "tab"} Topo
          %li{:role => "presentation"}
            %a{"aria-controls" => "recents", "data-toggle" => "tab", :href => "#recents", :role => "tab"} Recentes

        / Tab panes
        .tab-content
          #popular.tab-pane.active{:role => "tabpanel"}
            - @topic.popular.each do |p|
              = render partial: "proposals/proposal", locals: {proposal: p}

          #top.tab-pane{:role => "tabpanel"}
          #recents.tab-pane{:role => "tabpanel"}

