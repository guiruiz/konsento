.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title= t '.edit_team'
      .panel-body
        = simple_form_for @team do |f|
          = f.input :title
          = f.input :public
          %div
            %label
              = "#{RequirementValue.model_name.human(count: 2)}: "
            = @team.join_requirements.pluck(:title).to_sentence

          = f.button :submit
